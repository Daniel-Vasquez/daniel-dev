---
import Layout from "@/layouts/Layout.astro";
import Error from "@/components/icons/Error.astro";
---

<Layout title="404" description="Página no encontrada">
  <section class="flex flex-col m-auto gap-3 items-center justify-center px-3 min-h-screen">
    <div class="flex gap-1">
      <h2 class="text-9xl font-black text-golden">4</h2>
      <Error className="text-golden w-24" />
      <h2 class="text-9xl font-black text-golden">4</h2>
    </div>
    <h1 class="text-center text-black text-2xl">Página no encontrada</h1>
    <p class="text-center text-black">
      La página que buscas no existe o ha sido movida.
    </p>
    <a
      href="/"
      class="bg-golden my-3 px-9 py-3 font-semibold rounded-sm text-black hover:bg-opacity-80"
      title="Ir al inicio"
    >
      INICIO
    </a>
  </section>
</Layout>
