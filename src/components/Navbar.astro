---
import { DropdownMenu } from "@/components/DropdownMenu";
import SocialNetworks from "@/components/SocialNetworks.astro";
import { ROUTES } from "@/constants/routes";
const PUBLIC_LINKEDIN_LINK = import.meta.env.PUBLIC_LINKEDIN_LINK;
---

<header class="z-10 sticky top-0 w-full">
  <div class="bg-white shadow-lg grid grid-cols-2 xl:grid-cols-3 items-center mx-auto overflow-visible py-4 px-5 md:py-7 md:px-14 rounded-2xl rounded-t-none border-b border-border">
    <a
      href={PUBLIC_LINKEDIN_LINK}
      target="_blank"
      class="w-fit text-blakc"
      title="LinkedIn"
    >
      <h2 class="text-sm md:text-2xl text-center font-bold hover:underline">
        Daniel VÃ¡squez
      </h2>
    </a>

    <div class="hidden xl:block">
      <SocialNetworks />
    </div>

    <nav class="hidden justify-end lg:flex">
      <ul class="flex gap-4">
        {ROUTES.map(({ href, label }) => (
          <li>
            <a
              href={href}
              class="text-black font-semibold transition-colors duration-300 border-golden border-l-4 pl-2 hover:underline"
              title={label}
            >
              {label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
    
    <div class="flex justify-end lg:hidden">
      <DropdownMenu client:idle />
    </div>
  </div>
</header>
