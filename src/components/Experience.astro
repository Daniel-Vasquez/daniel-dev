---
import { EXPERIENCE } from "@/constants/experience";
---

<div id="experiencia" class="h-28"></div>
<section class="max-w-6xl mx-auto">
  <div class="bg-white shadow-lg rounded-2xl p-6">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-4">Experiencia</h2>
  </div>
  <div class="mt-8 grid gap-6 md:grid-cols-2">
    {EXPERIENCE.map(({ name, position, skills, start_date, end_date, link }) => (
      <div class="bg-white shadow-lg rounded-2xl p-6">
        <div class="flex flex-wrap items-center gap-1">
          Empresa:
          <h3 class="text-md font-semibold">
            <a
              class="font-semibold text-gray-800 underline hover:text-blue-600"
              href={link}
              target="_blank"
              title={name}
              >
              {name}
            </a>
          </h3>
          <span class="text-gray-700 font-semibold">
            {`(${ start_date } - ${ end_date }).`}
          </span>
        </div>
        { position && <p><strong>Posici√≥n:</strong> {position}.</p>}
        <p>
          <strong>Experiencia con:</strong>
          <span class="font-semibold text-gray-700">{skills}.</span>
        </p>
      </div>
    ))}
  </div>
</section>
