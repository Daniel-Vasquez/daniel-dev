---
import { EXPERIENCE } from "@/constants/experience";
---

<section class="bg-blue-light my-8 p-5 rounded-xl">
  <div class="personal-info-title">
    <p class="text-white text-3xl text-center font-semibold mb-5 sm:text-start">
      Experiencia
    </p>
  </div>
  <div class="flex flex-col gap-4 rounded-lg text-white">
    {EXPERIENCE.map(({ name, position, skills, start_date, end_date, link }) => (
      <div class="border-b-2 border-white pb-2">
        <div>
          <span>Empresa: </span>
          <a
            class="text-blue-500 font-semibold text-base underline hover:text-blue-600"
            href={link}
            target="_blank"
          >
            {name}
          </a>
        </div>
        <p>Posición: {position}</p>
        <p>
          Skills:{" "}
          <span class="font-semibold text-blue-300">{skills}</span>
        </p>
        <p>Fecha de inicio: {start_date}</p>
        {end_date && <p>Fecha de finalización: {end_date}</p>}
      </div>
    ))}
  </div>
</section>
