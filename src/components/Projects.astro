---
import Project from "./Project.astro";
import type { ProjectType } from "@/types/projects";

interface Props {
  projects: ProjectType[];
}

const { projects } = Astro.props;
---

<div class="container m-auto">
  <hgroup class="my-10 text-center">
    <h1 class="text-3xl text-white font-bold sm:text-5xl">Proyectos</h1>
  </hgroup>

  <div class="m-4 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 gap-5">
    {projects.map((item: ProjectType) => (
      <Project
        title={item.title}
        description={item.description}
        href={item.href}
        img={item.img}
      />
    ))}
  </div>
</div>