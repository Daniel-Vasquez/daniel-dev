---
import { EDUCATION } from "@/constants/education";

---
<div id="educacion" class="h-28"></div>
<section class="max-w-6xl mx-auto">
  <div class="bg-white shadow-lg rounded-2xl p-6">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-4">
      Educaci√≥n
    </h2>
  </div>
  <div class="mt-8 grid gap-6 md:grid-cols-2">
    {EDUCATION.map(({ name, title, date, logo, link }) => (
      <div class="bg-white shadow-lg rounded-2xl p-6 flex flex-col-reverse text-center text-lg items-center gap-8 pb-5 border-b border-border sm:flex-row sm:text-start">
        <div class="w-16">
          <img
            class="rounded-full"
            src={logo}
            alt={name}
            title={name}
          />
        </div>
        <div>
          <h4 class="text-gray-700 font-semibold mb-1 underline hover:opacity-70">
            <a
              href={ link }
              target="_blank"
              title={name}
            >
              {name}
            </a>
          </h4>
          <p class="mb-1 text-black font-semibold">
            {title}
          </p>
          <p class="mb-1 text-black">
            {date}
          </p>
        </div>
      </div>
    ))}
  </div>
</section>