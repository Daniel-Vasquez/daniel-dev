---
import { EDUCATION } from "@/constants/education";

---
<div id="educacion" class="h-28"></div>
<section class="border-2 border-border px-5 py-7 rounded-3xl">
  <div>
    <p class="text-3xl font-bold text-golden pb-4 lg:text-4xl">
      Educaci√≥n.
    </p>
  </div>
  <div class="flex flex-col gap-7">
    {EDUCATION.map(({ name, title, date, logo, link }) => (
      <div class="flex flex-col-reverse text-center text-lg items-center gap-8 p-2 pb-5 border-b-2 border-white sm:flex-row sm:text-start">
        <div class="w-16">
          <img
            class="rounded-full"
            src={logo}
            alt={name}
          />
        </div>
        <div>
          <h4 class="text-blue-600 font-semibold mb-1 underline hover:opacity-80">
            <a
              href={ link }
              target="_blank"
            >
              {name}
            </a>
          </h4>
          <p class="mb-1 text-white font-semibold">
            {title}
          </p>
          <p class="mb-1 text-white">
            {date}
          </p>
        </div>
      </div>
    ))}
  </div>
</section>